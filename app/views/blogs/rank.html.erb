<h3>ブログ閲覧数ランキング</h3>

<table>
  <thead>
    <tr>
      <th>順位</th>
      <th>名前</th>
      <th>閲覧数</th>
    </tr>
  </thead>
  <tbody>
    <% @most_viewed.each.with_index(1) do |blog, i| %>
      <tr>
        <td><%= "#{i}" %></td>
        <td><%= blog.title %></td>
        <td><%= blog.impressions_count %></td>
        <td><%= link_to t('Show'), blog %></td>
      </tr>
    <% end %>
  </tbody>
</table>
